<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      transition: background-image 0.5s ease-in-out;
      position: relative;
    }
    body::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.45);
      backdrop-filter: blur(4px);
      z-index: 0;
    }
    .register-card {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.25);
      max-width: 450px;
      width: 100%;
      position: relative;
      z-index: 1;
      animation: fadeInUp 0.8s ease;
      margin: auto;
    }
    .register-card h1 {
      text-align: center;
      margin-bottom: 1.5rem;
      color: #e67e22;
      font-weight: bold;
    }
    .btn-food {
      background: linear-gradient(90deg, #e67e22, #d35400);
      border: none;
      font-weight: bold;
    }
    .btn-food:hover {
      background: linear-gradient(90deg, #d35400, #e67e22);
    }
    @keyframes fadeInUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
  </style>
</head>
<body>

  <!-- Include Navbar -->
  <div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 80px);">
    <div class="register-card">
      <h1>üçΩ Register</h1>
      <form action="/api/auth/register" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
        </div>

        <div class="mb-3">
          <label for="role" class="form-label">Priority</label>
          <select class="form-select" id="role" name="role" required>
            <option value="" disabled selected>Select role</option>
            <option value="user">User</option>
            <option value="admin">Admin</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
        </div>

        <button type="submit" class="btn btn-food w-100 py-2">Register</button>

        <br>
        <p>if account already exists  ? <a href="/api/auth/login">Login</a></p>
      </form>
    </div>
  </div>

  <%- include('../navandfoot/footer') %> 

  <script>
    const foodImages = [
      'https://images.unsplash.com/photo-1504674900247-0877df9cc836',
      'https://images.unsplash.com/photo-1600891963938-a8815e0b6d63',
      'https://images.unsplash.com/photo-1551218808-94e220e084d2',
      'https://images.unsplash.com/photo-1523983302122-73e8fdfd45dc',
      'https://images.unsplash.com/photo-1512621776951-a57141f2eefd',
      'https://images.unsplash.com/photo-1565958011709-44c0b7abdf90'
    ];
    document.body.style.backgroundImage = `url('${foodImages[Math.floor(Math.random() * foodImages.length)]}')`;
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
