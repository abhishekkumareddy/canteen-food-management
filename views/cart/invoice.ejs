<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../navandfoot/nav') %>
  <div class="container mt-5 p-4 border rounded bg-light">
    <div class="row">
    <h1 class="text-center mb-4"> order conformed </h1>
    <P class="text-center mb-4">thanks for your order</P>
     </div>
    <h2 class="text-center mb-4">Order Invoice</h2>
   
    <!-- User & Manager Info -->
    <div class="row">
      <div class="col-md-6">
        <h5>User Info</h5>
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
      </div>
      <div class="col-md-6">
        <h5>Manager Info</h5>
        <p><strong>Name:</strong> <%= manager.name %></p>
        <p><strong>Email:</strong> <%= manager.email %></p>
      </div>
    </div>

    <hr>

    <!-- Items -->
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Item</th>
          <th>Price (₹)</th>
          <th>Qty</th>
          <th>Total (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% order.items.forEach((it, index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= it.itemId %></td> <!-- replace with populated item name if needed -->
            <td><%= it.price %></td>
            <td><%= it.quantity %></td>
            <td><%= it.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Totals -->
    <div class="text-end">
      <p>Subtotal: ₹<%= order.subtotal %></p>
      <p>Tax (10%): ₹<%= order.tax.toFixed(2) %></p>
      <h5 class="text-success">Grand Total: ₹<%= order.grandTotal.toFixed(2) %></h5>
    </div>
  </div>
  <%- include('../navandfoot/footer') %>
</body>
</html>
