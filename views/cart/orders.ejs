<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #ffecd2, #fcb69f); /* gradient background */
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-attachment: fixed;
    }
    .order-card {
      border-radius: 15px;
      background: rgba(255, 255, 255, 0.95); /* slight transparency */
      padding: 20px;
      margin-bottom: 25px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .order-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 28px rgba(0,0,0,0.2);
    }
    .order-header {
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
      margin-bottom: 15px;
    }
    .restaurant-name {
      font-weight: bold;
      font-size: 1.3rem;
      color: #e23744; /* Zomato red */
    }
    .order-id-badge {
      font-size: 0.9rem;
      padding: 5px 12px;
      border-radius: 20px;
      background: #e23744;
      color: #fff;
      font-weight: 500;
    }
    .item-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 10px;
    }
    .item-name {
      font-weight: 500;
      font-size: 1rem;
    }
    .price {
      font-weight: bold;
      color: #333;
    }
    .total-section {
      background: #fff3f3;
      padding: 12px;
      border-radius: 12px;
      margin-top: 15px;
      border: 1px solid #ffd6d6;
    }
    .grand-total {
      font-size: 1.2rem;
      font-weight: bold;
      color: #e23744;
    }
    h2.page-title {
      color: #fff;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
      font-weight: 700;
    }
  </style>
</head>
<body>

<div class="container mt-4">
    <%- include('../navandfoot/nav') %>
  <h2 class="mb-4 page-title">üç¥ My Orders</h2>

  <% if (orderItems.length === 0) { %>
    <div class="alert alert-light shadow-sm">No orders found.</div>
  <% } else { %>
    <% orderItems.forEach(order => { %>
      <div class="order-card">
        
        <!-- Order Header -->
        <div class="order-header d-flex justify-content-between align-items-center">
          <div>
            <span class="restaurant-name"><%= order.managerId?.name || "Canteen" %></span><br>
            <small class="text-muted"><%= order.createdAt.toDateString() %></small>
          </div>
          <div>
            <span class="order-id-badge">Order ID: <%= order.orderId %></span>
          </div>
        </div>

        <!-- Items List -->
        <div>
          <% order.items.forEach(it => { %>
            <div class="d-flex align-items-center mb-3">
              <img src="https://source.unsplash.com/60x60/?food,<%= it.itemId?.name || 'meal' %>" alt="food" class="item-img me-3">
              <div class="flex-grow-1">
                <div class="item-name"><%= it.itemId?.name || "Food Item" %></div>
                <small>Qty: <%= it.quantity %></small>
              </div>
              <div class="price">‚Çπ<%= it.total %></div>
            </div>
          <% }) %>
        </div>

        <!-- Totals -->
        <div class="total-section">
          <div class="d-flex justify-content-between">
            <span>Subtotal</span>
            <span>‚Çπ<%= order.subtotal %></span>
          </div>
          <div class="d-flex justify-content-between">
            <span>Tax</span>
            <span>‚Çπ<%= order.tax %></span>
          </div>
          <div class="d-flex justify-content-between grand-total">
            <span>Total</span>
            <span>‚Çπ<%= order.grandTotal %></span>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
<%- include('../navandfoot/footer') %>
</body>
</html>
